import sys
import os
import argparse
from pathlib import Path

from hera import *
from hera import _

from hera.subcommands.build import Build
from hera.subcommands.destroy import Destroy
from hera.subcommands.up import Up
from hera.subcommands.down import Down
from hera.subcommands.install import Install
#from hera.subcommands.grow import Grow
from hera.subcommands.agents import Agents
from hera.subcommands.devices import Devices
from hera.subcommands.types import Types
from hera.subcommands.layouts import Layouts
import hera.logger as logger

commands = []
commands.append(Build('build'))
commands.append(Destroy('destroy'))
commands.append(Up('up'))
commands.append(Down('down'))
commands.append(Install('install'))
#commands.append(Grow('grow'))
commands.append(Agents('agents'))
commands.append(Devices('devices'))
commands.append(Types('types'))
commands.append(Layouts('layouts'))

def main():
    parser = argparse.ArgumentParser(
        prog=PROG_NAME,
        description=_('Heuristic Reasoning Agent â€“ a service and a daemon for simple AI tasks.'),
        epilog=_('For further help, check the documentation.'))
    parser.add_argument('-s', '--simulate',
        action='store_true',
        help=_('calculate and allocate, but do not load'))
    parser.add_argument('-v', '--verbose',
        action='count',
        default=0,
        help=_('turn on increasing verbose mode'))
    parser.add_argument('--silent',
        action='store_true',
        help=_('turn off most informal reporting'))
    parser.add_argument('--force',
        action='count',
        default=0,
        help=_('turn on increasing continuation mode'))
    parser.add_argument('-d', '--debug',
        action='store_true',
        help=_('log debug info'))
    parser.add_argument('-c', '--callsign',
        type=str,
        help=_('callsign for the specific agent'))
    parser.add_argument('-i', '--id',
        type=str,
        help=_('id for the specific agent'))
    parser.add_argument('--log-file',
        type=str,
        default='/var/log/pyhera/pyhera.log',
        help=_('file for process logging'))
    parser.add_argument('--pid-path',
        type=str,
        default='/run/pyhera' if os.getuid() == 0 else '/run/pyhera/%s'%(os.getlogin()),
        help=_('path to dir for process identification'))
    parser.add_argument('--pid-file',
        type=str,
        default='%s.pid',
        help=_('file name (a pattern) for process identification'))
    parser.add_argument('--install-path',
        type=str,
        default='/var/lib/pyhera',
        help=_('path to config dir for installation'))
    parser.add_argument('--in-file',
        type=str,
        help=_('file for input'))
    parser.add_argument('--out-file',
        type=str,
        help=_('file for output'))
    parser.add_argument('--work-path',
        type=str,
        default='.',
        help=_('path to config dir for local work'))
    subparsers = parser.add_subparsers(title=_('subcommands'),
        description=_('valid subcommands'),
        help=_('help for subcommands'))

    for cmd in commands:
        cmd.make_subparser(subparsers)
    
    args = parser.parse_args()

    Path(args.log_file).mkdir(parents=True, exist_ok=True)
    logger.init(args.log_file, args.debug)

    try:
        args.action(args)
    except Exception as e:
        logger.error(e)
        print(e, file=sys.stderr)
        exit()


if __name__ == '__main__':
    main()
